# HOA Connect Staging Environment Configuration Template
# Copy this file to .env.staging and update with real values

# Application
NODE_ENV=staging
PORT=3001

# Database Configuration
DB_USER=hoa_connect_user
DB_PASSWORD=staging_password_change_me
DATABASE_URL=postgresql://hoa_connect_user:staging_password_change_me@database:5432/hoa_connect_prod

# Redis Configuration
REDIS_PASSWORD=staging_redis_password
REDIS_URL=redis://:staging_redis_password@redis:6379

# SendGrid Configuration (Staging)
SENDGRID_API_KEY=SG.staging_key_replace_with_real_key
SENDGRID_FROM_EMAIL=staging@seabreezemanagement.com
SENDGRID_FROM_NAME=Seabreeze Management (Staging)

# Twilio Configuration (Staging)
TWILIO_ACCOUNT_SID=staging_account_sid_replace_with_real
TWILIO_AUTH_TOKEN=staging_auth_token_replace_with_real
TWILIO_PHONE_NUMBER=+15551234567

# Security
JWT_SECRET=staging_jwt_secret_change_in_production_very_long_random_string
ENCRYPTION_KEY=staging_encryption_key_32_chars_long

# Monitoring (Optional for staging)
SENTRY_DSN=https://staging_sentry_dsn@sentry.io/project_id
NEW_RELIC_LICENSE_KEY=staging_new_relic_key

# Frontend Configuration
REACT_APP_API_URL=https://staging-api.hoaconnect.com
REACT_APP_DEMO_MODE=false
REACT_APP_ENVIRONMENT=staging

# File Storage (if using cloud storage)
AWS_ACCESS_KEY_ID=staging_aws_access_key
AWS_SECRET_ACCESS_KEY=staging_aws_secret_key
AWS_REGION=us-west-2
AWS_S3_BUCKET=hoa-connect-staging-files

# CORS Configuration
CORS_ORIGIN=https://staging.hoaconnect.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/hoa-connect-staging.log

# Notification Settings
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Session Configuration
SESSION_SECRET=staging_session_secret_change_me
SESSION_TIMEOUT=86400000

# Feature Flags (for staging testing)
ENABLE_AI_CCR=true
ENABLE_BULK_NOTIFICATIONS=true
ENABLE_ADVANCED_ANALYTICS=true



